<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="index.html" class="logo">FreshMart</a>
            <button class="mobile-menu-btn">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </button>
            <ul class="nav-links">
                <li><a href="index.html">Home</a></li>
                <li><a href="products.html">Products</a></li>
                <li><a href="careers.html">Careers</a></li>
                <li><a href="contact.html">Contact</a></li>
                <li><a href="faqs.html">FAQs</a></li>
                <li><a href="login.html">Login</a></li>
            </ul>
        </div>
    </nav>
    <main>
        <% let totalPrice = 0; %> <!-- Initialize totalPrice to 0 -->
<% if (cart.length > 0) { %>
    <ul>
    <% cart.forEach(item => { %>
        <li>
        Product: <%= item.name %>, Quantity: <%= item.quantity %>, Price: ₹<%= item.price %>
        </li>
      <% totalPrice += item.price * item.quantity; %> <!-- Add the item total to the totalPrice -->
    <% }) %>
    </ul>
    <p>Total: ₹<%= totalPrice %></p>
    <a href="/checkout" class="btn">Proceed to Checkout</a>
<% } else { %>
    <p>Your cart is empty.</p>
<% } %>
    <footer>
        <h3>Total: ₹<%= cart.items.reduce((total, item) => total + item.productId.price * item.quantity, 0) %></h3>
        <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
    </footer>
    </main>
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section">
                <h3>FreshMart</h3>
                <p>Bringing fresh produce directly from farms to your table.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="products.html">Products</a></li>
                    <li><a href="careers.html">Careers</a></li>
                    <li><a href="contact.html">Contact</a></li>
                    <li><a href="faqs.html">FAQs</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Follow Us</h3>
                <div class="social-links">
                    <a href="#" class="social-link">Facebook</a>
                    <a href="#" class="social-link">Instagram</a>
                    <a href="#" class="social-link">Twitter</a>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 FreshMart. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
